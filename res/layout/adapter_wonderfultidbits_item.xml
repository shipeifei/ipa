<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="11dp"
    android:paddingRight="11dp"
    android:paddingTop="11dp" >

    <ImageView
        android:id="@+id/iv_media_id"
        android:layout_width="144dp"
        android:layout_height="104dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:background="@drawable/default_goods_img"  />

    <TextView
        android:id="@+id/tv_play_hour"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/iv_media_id"
        android:layout_alignRight="@+id/iv_media_id"
        android:layout_marginBottom="3dp"
        android:layout_marginRight="3dp"
        android:background="#333333"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text=""
        android:textColor="#ffffffff"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/tv_media_name"
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:layout_alignTop="@+id/iv_media_id"
        android:layout_marginLeft="11dp"
        android:layout_toRightOf="@+id/iv_media_id"
        android:ellipsize="end"
        android:maxLines="2"
        android:text=""
        android:textColor="#333333"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_update_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_media_name"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/iv_media_id"
        android:text=""
        android:textColor="#999999"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_play_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_update_time"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/iv_media_id"
        android:text=""
        android:textColor="#999999"
        android:textSize="12sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/iv_media_id"
        android:layout_marginTop="11dp"
        android:background="#dbdbdb" />

</RelativeLayout>