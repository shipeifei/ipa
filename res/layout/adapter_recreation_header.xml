<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_recreation_click"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@color/white"
    android:gravity="center_vertical" >

    <ImageView
        android:id="@+id/imageview_recreation_zhuangshi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/icon_title_0" />

    <TextView
        android:id="@+id/textview_recreation_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@id/imageview_recreation_zhuangshi"
        android:textColor="#696969"
        android:textSize="14sp"
        android:text="@string/recreation_title" />

    <ImageView
        android:id="@+id/imageview_recreation_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/icon_jiantou"
        android:visibility="visible" />

</RelativeLayout>