<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f5f5f5" >

    <com.ipassistat.ipa.view.TitleBar
        android:id="@+id/contact_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >
    </com.ipassistat.ipa.view.TitleBar>

    <RelativeLayout
        android:id="@+id/rl_sengmsg"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white" >
 		<View android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentTop="true"
            android:background="#d2d2d2"/>
        
        <CheckBox
            android:id="@+id/cb_selecteall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:button="@drawable/checkbox_selector"
            android:text="全选"
            android:textColor="#646464"
            android:paddingLeft="@dimen/selectalltextleftpadding"
            android:textSize="15sp" />

        <CheckBox
            android:id="@+id/cb_selecteallrec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:button="@drawable/checkbox_selector"
            android:text="全选"
            android:textColor="#646464"
            android:paddingLeft="@dimen/selectalltextleftpadding"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_sele"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="110dp"
            android:text="已选"
            android:textColor="#646464"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_seleteced"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_sele"
            android:text="(0)"
            android:textColor="#ff7701"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_sure"
            android:layout_width="125dp"
            android:layout_height="37dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/button_state"
            android:onClick="myClick"
            android:text="确   定"
            android:textColor="#ffffff"
            android:textSize="15sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ll_selecttor"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_below="@+id/contact_back"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        >

        <!-- #718085 -->

        <Button
              android:id="@+id/btn_myContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/choice_2_01"
            android:onClick="myClick"
            android:textSize="15sp"
             android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="@color/white"
            android:text="未推荐(0)" />

        <Button
            android:id="@+id/btn_myReccomand"
              android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/btn_myContact"
            android:background="@drawable/choice_2_02"
            android:onClick="myClick"
            android:textSize="15sp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="#666666"
            android:text="已推荐(0)" />
    </RelativeLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/ll_selecttor"
        android:layout_marginTop="10dp"
        android:background="#e0e0e0" />

    <FrameLayout
        android:id="@+id/fl_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rl_sengmsg"
        android:layout_below="@+id/view"
        android:background="#f5f5f5" >

        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f5f5f5"
            android:cacheColorHint="#d2d2d2"
            android:divider="#e0e0e0"
            android:dividerHeight="0.5dp"
            android:drawSelectorOnTop="true"
            android:scrollbars="none" >
        </ListView>

        <TextView
            android:id="@+id/tv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="#f0606060"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="30sp" />

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:background="#00000000"
            android:orientation="vertical" >
        </LinearLayout>
    </FrameLayout>

    <ImageView
        android:id="@+id/iv_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/image_loading" 
        android:layout_centerInParent="true"
        />

</RelativeLayout>