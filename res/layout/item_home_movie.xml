<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="11dp"
    android:layout_marginRight="11dp"
    android:orientation="vertical" >
    
     <ImageView
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:src="@drawable/listview_divder_bg" />
    
    <FrameLayout
        
        android:layout_width="match_parent"
        android:layout_height="158dp"
        android:background="@drawable/default_goods_img" >
        <ImageView 
            android:id="@+id/movie_pic"
             android:layout_width="match_parent"
       		 android:layout_height="match_parent"
       		 android:scaleType="fitXY"
        	 android:background="@drawable/default_goods_img" 
            />
        <ImageView 
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:src="@drawable/icon_bofang"
            	android:layout_gravity="center"
            />
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp" 
        android:gravity="center_vertical"
        android:background="@color/textbackground"
        >

        <TextView
            android:id="@+id/movie_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="#646464"
            android:textSize="15sp"
            android:layout_marginLeft="15dp"
            />

        <TextView
            android:id="@+id/movie_info"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/movie_name"
            android:maxLines="2"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:textColor="#9C9B9D"
            android:textSize="13sp"
            />
    </RelativeLayout>

</LinearLayout>
