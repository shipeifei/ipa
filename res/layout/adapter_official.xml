<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:background="@color/white"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="11dp"
    android:layout_marginRight="11dp"
    android:background="@drawable/bg_border_grey" >

    <ImageView
        android:id="@+id/official_image"
        android:layout_width="match_parent"
        android:layout_height="189dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginTop="1dp"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/official_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/official_image"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="16dp"
        android:textColor="#171717"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/official_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/official_title"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="14dp"
        android:gravity="center_vertical"
        android:textColor="#535353"
        android:textSize="13sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="13dp"
        android:layout_below="@id/official_time" />

</RelativeLayout>
</LinearLayout>