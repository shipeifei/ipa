<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/layout_titile_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="158dp"
            android:gravity="center" >

            <ImageView
                android:id="@+id/imageview_recreation_title"
                android:layout_width="match_parent"
                android:layout_height="158dp"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/imageview_start_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/icon_bofang" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/layout_video_info"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#F9F9F9"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textview_video_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:textColor="#646464"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textview_video_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="#9c9b9d"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_content_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/layout_item_first"
                android:layout_width="164dp"
                android:layout_height="162dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imageview_item_first"
                    android:layout_width="match_parent"
                    android:layout_height="118dp"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/textview_item_first"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="2"
                    android:paddingLeft="13dp"
                    android:textColor="#646464"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_item_second"
                android:layout_width="164dp"
                android:layout_height="162dp"
                android:layout_marginLeft="9dp"
                android:layout_weight="1"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imageview_item_second"
                    android:layout_width="match_parent"
                    android:layout_height="118dp"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/textview_item_second"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="2"
                    android:paddingLeft="13dp"
                    android:textColor="#646464"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_item_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/layout_item_third"
                android:layout_width="164dp"
                android:layout_height="162dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imageview_item_third"
                    android:layout_width="match_parent"
                    android:layout_height="118dp"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/textview_item_third"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="2"
                    android:paddingLeft="13dp"
                    android:textColor="#646464"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_item_forth"
                android:layout_width="164dp"
                android:layout_height="162dp"
                android:layout_marginLeft="9dp"
                android:layout_weight="1"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imageview_item_forth"
                    android:layout_width="match_parent"
                    android:layout_height="118dp"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/textview_item_forth"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="2"
                    android:paddingLeft="13dp"
                    android:textColor="#646464"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>