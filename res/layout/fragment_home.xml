<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <com.ipassistat.ipa.view.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/goods"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="6dp"
            android:drawableTop="@drawable/quanbushangpin"
            android:gravity="center"
            android:text="邮件"
            android:textColor="#535353" />

        <TextView
            android:id="@+id/trial_center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="6dp"
            android:drawableTop="@drawable/shiyongzhongxin"
            android:gravity="center"
            android:text="日历"
            android:textColor="#535353" />

        <TextView
            android:id="@+id/offical_activity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="6dp"
            android:drawableTop="@drawable/guanfanghuodong"
            android:gravity="center"
            android:text="闹钟"
            android:textColor="#535353" />

        <TextView
            android:id="@+id/my_center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="6dp"
            android:drawableTop="@drawable/gerenzhongxin"
            android:gravity="center"
            android:text="个人中心"
            android:textColor="#535353" />
    </LinearLayout>

    <View
        style="@style/line"
        android:layout_marginTop="14dp" />

    <EditText
        android:id="@+id/iat_text"
        android:layout_width="fill_parent"
        android:layout_height="200dip"
        android:gravity="top|left"
        android:paddingBottom="20dip"
        android:textSize="20sp" />

    <Button
        android:id="@+id/iat_recognize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开始"
        android:textSize="20sp" />

</LinearLayout>