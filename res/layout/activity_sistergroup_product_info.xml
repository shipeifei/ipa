<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="10dip" >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dip"
         />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textview_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="商品名字"
            android:textColor="@color/black_03" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="商品 * 简介"
            android:textColor="@color/red_03" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textview_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Y69.00"
                android:textColor="@color/trial_red" />

            <TextView
                android:id="@+id/textview_oldprice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Y128.00"
                android:textColor="@color/black_02" />
        </LinearLayout>

        <TextView
            android:id="@+id/textview_buycount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3546人购买"
            android:textColor="@color/black_02" />
    </LinearLayout>

</LinearLayout>